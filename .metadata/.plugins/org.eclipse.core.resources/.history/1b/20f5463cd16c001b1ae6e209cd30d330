package gameObjects;

import javafx.scene.canvas.GraphicsContext;
import javafx.scene.paint.Color;
import standard.Asset;
import standard.FlappyBird;
import standard.Sprite;

public class Score implements GameObject {
	private FlappyBird flappyBird;
    private Asset asset = new Asset("/images/score.png", ObjectSizes.SCORE.length(), ObjectSizes.SCORE.height());
    private Sprite sprite;
    private GraphicsContext ctx;

    private int posX = 10;
    private int posY = 50;
    private int tablePosX, tablePosY;

    private double prevActivePipePosY = FlappyBird.activePipes[0].getPosY();

    public Score(FlappyBird flappyBird, double screenWidth, double screenHeight, GraphicsContext ctx) {
    	this.flappyBird=flappyBird;
        sprite = new Sprite(asset);
        tablePosX = (int) ( screenWidth / 2 - ObjectSizes.SCORE.length() / 2);
        tablePosY = (int) (( screenHeight - ObjectSizes.FLOOR.height() ) / 2 - ObjectSizes.SCORE.height() / 2);
        sprite.setPosX(tablePosX);
        sprite.setPosY(tablePosY);
        sprite.setVel(0, 0);
        sprite.setCtx(ctx);

        posX = (int) screenWidth / 2 - 10;
        posY = 80;

        this.ctx = ctx;
    }

    public void update(long now) {
    	//Punktzahl würde weiter gehen da weiter Pipes geladen werden bis der letzte tot ist --> Score-Erhöhung nur wenn Vogel noch lebt
        if (FlappyBird.activePipes[0].getPosY() != prevActivePipePosY && !flappyBird.isBirdDead()) {
            FlappyBird.score++;
            prevActivePipePosY = FlappyBird.activePipes[0].getPosY();

//            if (FlappyBird.score > FlappyBird.highscore)
//                FlappyBird.highscore = FlappyBird.score;
            }
 
    }

    public void render() {
        if (!flappyBird.isGameStarted()) {
            sprite.render();
            ctx.fillText(FlappyBird.score + "", posX + 2, tablePosY + 70);
            ctx.fillText(FlappyBird.highscore + "", posX + 2, tablePosY + 126);
        }

        if (flappyBird.isGameStarted()) {
            ctx.setFill(Color.WHITE);
            ctx.fillText(FlappyBird.score + "", posX, posY);
            ctx.strokeText(FlappyBird.score + "", posX, posY);
        }
    }
}


public class PlayerInput extends JFrame {

	JTextField inputName = new JTextField(null,15);
	

	JTextField inputServer = new JTextField();

	public void initName() {
		setSize(300, 150);
		setTitle("PlayerName");
		JPanel panel = new JPanel();
		panel.add(inputName);

		add(panel);
		setVisible(true);
		pack();
	}
	
	public JTextField getInputName() {
		return inputName;
	}

}